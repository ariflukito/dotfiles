" Don't be compatible with vi
set nocompatible

" Enable filetype plugins
filetype plugin on
filetype indent on

" Enable syntax highlighting
syntax enable

" Set solarized theme color
colorscheme solarized

" Show matching brackets
set showmatch

" Turn on wild menu
set wildmenu
set wildignore=*.o,*.class,*~

" Use spaces instead of tabs
set expandtab

" Set tab to 4 spaces
set shiftwidth=4
set tabstop=4

" Indent things
set autoindent
set smartindent

" Search options
set incsearch
set ignorecase
set infercase
set smartcase
